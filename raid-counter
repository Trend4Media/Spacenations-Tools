    <script>
        function parseNumber(str) {
            // Entfernt Punkte als Tausendertrennzeichen und konvertiert zu Zahl
            return parseInt(str.replace(/\./g, '')) || 0;
        }

        function formatNumber(num) {
            // Formatiert Zahl mit Punkten als Tausendertrennzeichen
            return num.toLocaleString('de-DE');
        }

        function calculateRaids() {
            const raidText = document.getElementById('raid-reports').value;
            
            // Initialisiere Rohstoff-Z√§hler
            const resources = {
                iron: 0,
                silicon: 0,
                carbon: 0,
                water: 0,
                oxygen: 0,
                hydrogen: 0
            };
            
            let raidCount = 0;
            let successfulRaids = 0;
            
            const lines = raidText.split('\n');
            let currentRaidHasLoot = false;
            
            for (let line of lines) {
                line = line.trim();
                
                // Erkenne Raid-Start
                if (line.includes('pl√ºnderte erfolgreich')) {
                    raidCount++;
                    currentRaidHasLoot = false;
                }
                
                // Parse Rohstoff-Zeilen
                if (line.match(/^(Eisen|Silizium|Kohlenstoff|Wasser|Sauerstoff|Wasserstoff)\s+\d+/)) {
                    const match = line.match(/^(Eisen|Silizium|Kohlenstoff|Wasser|Sauerstoff|Wasserstoff)\s+(\d+)/);
                    if (match) {
                        const resourceType = match[1].toLowerCase();
                        const value = parseNumber(match[2]);
                        
                        if (value > 0) {
                            currentRaidHasLoot = true;
                        }
                        
                        switch(resourceType) {
                            case 'eisen':
                                resources.iron += value;
                                break;
                            case 'silizium':
                                resources.silicon += value;
                                break;
                            case 'kohlenstoff':
                                resources.carbon += value;
                                break;
                            case 'wasser':
                                resources.water += value;
                                break;
                            case 'sauerstoff':
                                resources.oxygen += value;
                                break;
                            case 'wasserstoff':
                                resources.hydrogen += value;
                                break;
                        }
                    }
                }
                
                // Z√§hle erfolgreiche Raids (wenn Beute > 0)
                if (line.includes('Wasserstoff') && currentRaidHasLoot) {
                    successfulRaids++;
                    currentRaidHasLoot = false;
                }
            }
            
            // Berechne Gesamtbeute
            const totalLoot = resources.iron + resources.silicon + resources.carbon + 
                            resources.water + resources.oxygen + resources.hydrogen;
            
            // Berechne Durchschnitt
            const averageLoot = raidCount > 0 ? Math.round(totalLoot / raidCount) : 0;
            
            // Update Anzeige - Rohstoffe
            document.getElementById('total-iron').textContent = formatNumber(resources.iron);
            document.getElementById('total-silicon').textContent = formatNumber(resources.silicon);
            document.getElementById('total-carbon').textContent = formatNumber(resources.carbon);
            document.getElementById('total-water').textContent = formatNumber(resources.water);
            document.getElementById('total-oxygen').textContent = formatNumber(resources.oxygen);
            document.getElementById('total-hydrogen').textContent = formatNumber(resources.hydrogen);
            
            // Update Anzeige - Statistiken
            document.getElementById('raid-count').textContent = raidCount;
            document.getElementById('successful-raids').textContent = successfulRaids;
            document.getElementById('total-loot').textContent = formatNumber(totalLoot);
            document.getElementById('average-loot').textContent = formatNumber(averageLoot);
        }
        
        function clearAll() {
            document.getElementById('raid-reports').value = '';
            
            // Reset alle Rohstoff-Werte auf 0
            document.getElementById('total-iron').textContent = '0';
            document.getElementById('total-silicon').textContent = '0';
            document.getElementById('total-carbon').textContent = '0';
            document.getElementById('total-water').textContent = '0';
            document.getElementById('total-oxygen').textContent = '0';
            document.getElementById('total-hydrogen').textContent = '0';
            
            // Reset alle Statistik-Werte auf 0
            document.getElementById('raid-count').textContent = '0';
            document.getElementById('successful-raids').textContent = '0';
            document.getElementById('total-loot').textContent = '0';
            document.getElementById('average-loot').textContent = '0';
        }
    </script>
